{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,

    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "strict": true,
    "traceResolution": true,

    // https://bazelbuild.github.io/rules_nodejs/TypeScript.html#ts_project
    // https://github.com/microsoft/TypeScript/issues/37378
    "rootDirs": [
      ".",
      "../../bazel-out/host/bin/fullscreen/node-fields-codegen",
      "../../bazel-out/darwin-fastbuild/bin/fullscreen/node-fields-codegen",
    ]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}
